.wrap {
  position: relative;
}

.blankMiddle {
  width: 100%;
  height: 10rpx;
  background: #f4f4f4;
  margin-top: 20rpx;
}

.addPeople {
  display: flex;
  height: 80rpx;
  align-items: center;
  padding: 0 0 0 30rpx;
  border-bottom: 1px solid #f4f4f4;
}

.addInput {
  background: #f4f4f4;
  /* width: 590rpx; */
  width: 560rpx;
  height: 66rpx;
  border-radius: 60rpx;
  padding: 0 0 0 40rpx;
}

.addPeoImg {
  width: 36rpx;
  height: 38rpx;
  margin-left: 24rpx;
}

.addName {
  display: flex;
  height: 80rpx;
  align-items: center;
  padding: 0 0 0 30rpx;
}

.billNmae {
  display: flex;
  margin-top: 20rpx;
  margin-left: 30rpx;
  align-items: center;
}

.billNameInput {
  background: #f4f4f4;
  padding: 0 0 0 20rpx;
  width: 428rpx;
  height: 60rpx;
