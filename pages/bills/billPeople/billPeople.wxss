.sureButton {
  position: fixed;
  bottom: 2%;
  width: 690rpx;
  height: 88rpx;
  margin: 0 0 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: rgba(51, 204, 118, 1);
  border-radius: 44rpx;
  font-size: 32rpx;
}

