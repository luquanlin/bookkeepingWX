/* pages/bills/billUser/billUser.wxss */

.wrap {
  position: relative;
}

.allPeople {
  width: 100%;
  height: 146rpx;
  border-bottom: 2rpx solid #f4f4f4;
  padding: 30rpx 0 0 30rpx;
  position: relative;
}

.addDate {
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #444;
}

.peoMark {
  position: absolute;
  right: 8%;
  top: 18%;
  background: rgba(51, 204, 118, 1);
  width: 90rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 33rpx;
  font-size: 30rpx;
}

.delete {
  width: 33rpx;
  height: 33rpx;
  background-size: 100% 100%;
}

.div_right {
  position: absolute;
  right: 8%;
  bottom: 12%;
  background: #999;
  width: 90rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 33rpx;
  font-size: 30rpx;
}
