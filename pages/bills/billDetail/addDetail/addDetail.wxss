/* pages/bills/billDetail/addDetail/addDetail.wxss */

.wrap {
  height: 100vh;
  width: 100%;
  padding: 30rpx;
}

.sex {
  display: flex;
  height: 100rpx;
  align-items: center;
}

.radio-group {
  margin-left: 10px;
  width: 320rpx;
  display: flex;
  justify-content: space-between;
}

.zc {
  margin-left: 20rpx;
}

.typeName {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.typePicker {
  width: 44%;
  border: 2rpx solid #999;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 6rpx 6rpx #888;
}

.billPrice {
  border-bottom: 2rpx solid #999;
  box-shadow: 0rpx 2rpx 2rpx #888;
  height: 60rpx;
}

.remarks {
  border-bottom: 2rpx solid #999;
  box-shadow: 0rpx 2rpx 2rpx #888;
  height: 60rpx;
}

.picker {
  color: #999;
}

.pickerSelect {
  color: #000;
}

.price {
  display: flex;
  align-items: center;
  height: 90rpx;
}

.sure {
  color: #fff;
  background-color: rgba(51, 204, 118, 1);
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 100%;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buttom {
  position: fixed;
  bottom: 2%;
  width: 690rpx;
  height: 88rpx;
  margin: 0 0 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
